---
import TgrIcon from '../components/TgrIcon.astro'

export interface Props {
  title: string;
  desc: string;
}

const { title, desc } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja" data-theme="winter" class="h-full bg-neutral">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/android-chrome-192x192.png">
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={desc} />
    <title>{title}</title>
  </head>
  <body class="min-h-full bg-base-100">
    <div id="navbar" class="navbar bg-base-100 bg-opacity-90 backdrop-blur fixed top-0 z-10">
      <a href="/" class="btn btn-ghost normal-case text-xl">TGR Group</a>
    </div>
    <div class="pb-6">
      <slot />
    </div>
    <footer class="footer footer-center p-10 bg-neutral text-neutral-content sticky top-[100vh]">
      <div>
        <TgrIcon classSvg="fill-neutral-content h-10" />
        <p class="font-bold">&copy; 2023 TGR Group</p>
      </div>
    </footer>
  </body>
</html>

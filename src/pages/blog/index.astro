---
import { getCollection } from 'astro:content'
import { format } from 'date-fns'
import { Img } from 'astro-imagetools/components'
import Layout from '../../layouts/Layout.astro'

const posts = await getCollection('blog', ({ data }) => {
  return data.draft !== true
})
---

<Layout title="Blog - TGR Group" desc="メンバーによるブログ">
  <div class="min-h-screen bg-base-100">
    <div class="px-6 pt-28 pb-16 text-center">
      <div class="text-5xl font-bold">
        Blog !!
      </div>
    </div>
    <div class="p-6 container mx-auto">
      <h1 class="text-3xl font-bold mb-6">最近の投稿</h1>
      <ul class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {posts.map(post => (
        <li>
          <div class="card shadow bg-white">
            <figure class="w-full aspect-[1200/630] bg-primary-content bg-no-repeat bg-center bg-[length:3rem_3rem]" style="background-image: url(data:image/svg+xml;base64,);">
              <img src={`/blog/og/${post.slug}.png`} alt={`image_${post.slug}`} />
            </figure>
            <div class="card-body">
              <a href={`/blog/posts/${post.slug}`}>
                <h2 class="card-title text-3xl font-bold">{post.data.title}</h2>
              </a>
              <div class="inline-block">
                {post.data.tags.map((tag: string) => (
                <a href={`/blog/tags/${tag}`} class="mr-3"># {tag}</a>
                ))}
              </div>
              <a href={`/blog/author/${String(post.data.author)}`} target="_blank" class="mt-5 w-fit">
                <div class="flex gap-3 w-fit">
                  <div class="flex-none avatar">
                    <div class="w-10 h-10 rounded-full">
                      <Img src={`https://github.com/${String(post.data.author)}.png`} alt={`avatar_${String(post.data.author)}`} />
                    </div>
                  </div>
                  <div class="flex-none text-sm">
                    <p>{post.data.author}</p>
                    <p>{format(post.data.pubDate, 'MMM dd, yyyy')}</p>
                  </div>
                </div>
              </a>
            </div>
          </div>
        </li>
        ))}
      </ul>
    </div>
  </div>
</Layout>
